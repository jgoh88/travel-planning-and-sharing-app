<div class="row d-flex justify-content-center mb-5">
    <div class="col-10 border-bottom">
        <h2>Information on <%= country.name %></h2>
    </div>
</div>
<div class="row d-flex justify-content-center mb-5">
    <div class="col-5">
        <div class="row mb-3">
            <div class="col">
                <img src="<%= country.image.url %>" class="img-fluid" alt="">
            </div>
        </div>
        <div class="row">
            <div class="mapouter col">
                <div class="gmap_canvas">
                    <iframe
                        style="width: 100%; aspect-ratio: 1/0.9;"
                        id="gmap_canvas"
                        src="https://maps.google.com/maps?q=<%= country.name %>&t=&z=6&ie=UTF8&iwloc=&output=embed"
                        frameborder="0"
                        scrolling="no"
                        marginheight="0"
                        marginwidth="0">
                    </iframe>
                </div>
            </div>
        </div>
            
    </div>
    <div class="col-5">
            <div class="col border-bottom">
                <h3>Description</h3>
            </div>
            <div class="col mb-5">
                <p><%= country.description %></p>
            </div>
            <div class="col border-bottom">
                <h3>Best Time to Visit</h3>
            </div>
            <div class="col">
                <p><%= country.timeToVisit %></p>
            </div>
    </div>
</div>
<script>
    const placesToVisitMenu = document.getElementById('places-to-visit-menu')
    if (placesToVisitMenu) {
        placesToVisitMenu.classList.add('active')
        placesToVisitMenu.setAttribute('aria-current', 'page')
    }
</script>
