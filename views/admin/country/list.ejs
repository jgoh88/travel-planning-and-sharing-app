<div class="row">
    <div class="col-1 container-fluid border-end">
        <%- include('../partials/sidebar') %>
    </div>
    <div class="col ms-2 me-3">
        <div class="row">
            <div class="cold d-flex flex-row justify-content-between align-items-center">
                <h2>Manage Country</h2>
                <form action="/admin/country/new">
                    <button type="submit" class="btn btn-primary">Add country</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card"></div>
                    <% countries.forEach((country) => { %>
                        <div class="card-header">
                            <h3><%= country.name %></h3>
                        </div>
                        <div class="card-body">
                            <p>Description:</p>
                            <p><%= country.description %></p>
                            <div class="d-flex flex-row justify-content-end">
                                <form action="/admin/country/<%= country._id %>/edit">
                                    <button type="submit" class="btn btn-primary">Edit</button>
                                </form>
                                <form action="/admin/country/<%= country._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>


