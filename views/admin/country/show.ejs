<div class="row">
    <%- include('../partials/sidebar') %>
    <div class="col ms-2 me-3">
        <div class="row">
            <div class="cold d-flex flex-row justify-content-between align-items-center">
                <h2><%= country.name  %></h2>
            </div>
        </div>
        <div class="row">
            <div class="d-flex align-items-center justify-content-between">
                <h4 class="mt-2 mb-3">Main Information</h4>
                <!-- <form action="/admin/country/<%= country._id %>/edit">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form> -->
            </div>
            <div class="col">
                <p class="fw-bold mb-1">Description about the country</p>
                <p><%= country.description %></p>
                <p class="fw-bold mb-1">Recommended time to visit the country</p>
                <p><%= country.timeToVisit %></p>
                <p class="fw-bold mb-1">Image of the country</p>
                <img src="<%= country.image.url %>" class="img-thumbnail" style="height: 200px; width: 200px;" alt="">
            </div>
        </div>
        <!-- <div class="row">
            <div class="d-flex align-items-center justify-content-between">
                <h4 class="mt-4 mb-3">Cities</h4>
                <form action="/admin/country/<%= country._id %>/city/edit">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>
            </div>
            <div class="col">
                <% country.cities.forEach((city) => { %>
                    <div class="card">
                        <div class="card-header">
                            <p><%= city.name %></p>
                        </div>
                        <div class="card-body">
                            <% if (city.image.url) { %>
                                <img src="<%= city.image.url %>" class="img-thumbnail" style="height: 200px; width: 200px;" alt="">
