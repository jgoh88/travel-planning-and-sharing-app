<div class="row d-flex justify-content-center">
    <div class="col-4 text-center">
        <h1>Register</h1>
        <form action="/user" method="POST" enctype="multipart/form-data">
            <div>
                <label for=""></label>
                <input type="text" name="firstName" placeholder="First Name" required class="form-control">
            </div>
            <div>
                <label for=""></label>
                <input type="text" name="lastName" placeholder="Last Name" required class="form-control">
            </div>
            <div>
                <label for=""></label>
                <input type="email" name="email" placeholder="Email" required class="form-control">
            </div>
            <div>
                <label for=""></label>
                <input type="file" name="profilePicture" placeholder="Profile Picture" class="form-control">
            </div>
            <div>
                <label for=""></label>
                <input type="password" name="password" placeholder="Password" required class="form-control">
            </div>
    
            <button type="submit" class="btn btn-success mt-3 fw-bold">Register</button>
        </form>
    </div>
</div>