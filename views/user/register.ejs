                <label for=""></label>
                <input type="email" name="email" placeholder="Email" required class="form-control">
            </div>
            <div>
                <label for=""></label>
                <input type="file" name="profilePicture" placeholder="Profile Picture" class="form-control">
            </div>
            <div>
                <label for=""></label>
                <input type="password" name="password" placeholder="Password" required class="form-control">
            </div>
    
            <button type="submit" class="btn btn-primary mt-3 fw-bold">Register</button>
        </form>
    </div>
</div>